<% content_for(:body_attributes) do %>
  data-turbolinks="false"
<% end %>

<h2><%= @group.name %><%= t 'blogs.index.google_maps_list' %></h2>

<div id='map' class='mx-auto' style='height: 400px; width: 1400px;'></div>

<script>
var map;
var marker = [];
var markerData = gon.group_maps;

function initMap() {
  geocoder = new google.maps.Geocoder()

  map = new google.maps.Map(document.getElementById('map'), {
    center: { lat: 35.6458437, lng: 139.7046171 },
    zoom: 7,
  });

  for (var i = 0; i < markerData.length; i++) {
    var id = markerData[i]['id']

    markerLatLng = new google.maps.LatLng({
      lat: markerData[i]['latitude'],
      lng: markerData[i]['longitude']
    });

    marker[i] = new google.maps.Marker({
      position: markerLatLng,
      map: map
    })
  }
}
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_KEY'] %>&callback=initMap" async defer></script>

<%= link_to t('blogs.index.blog_index'), group_blogs_path(@group) %>