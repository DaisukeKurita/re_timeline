<%= form_with(model: @group, local: true) do |form| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= @group.errors.count %><%= t 'view.error_has_occurred' %></h2>
      <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="group_name">
    <%= form.label :name %>  <br/>
    <%= form.text_field :name, placeholder: "グループ名" %>
  </div>
  <div class="group_explanation">
    <%= form.label :explanation %> <br/>
    <%= form.text_area :explanation, placeholder: "グループ説明" %>
  </div>
  <%= form.submit %>
<% end %>

